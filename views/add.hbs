<h1>Add</h1>
<form action="/add" method="POST">
    <div class="input-field col s6">
        <input id="title" type="text" name="title" class="validate" required>
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Enter name"></span>
    </div>
    <div class="input-field col s6">
        <input id="price" type="number" name="price" class="validate" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>
    <div class="input-field col s6">
        <input id="img" type="text" name="img" class="validate">
        <label for="img">Url image</label>
        <span class="helper-text" data-error="Enter url for image" required></span>
    </div>

    <button type="submit" class="btn btn-primary">Add course</button>
</form>